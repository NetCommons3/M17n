{
    "name":        "netcommons/m17n",
    "description": "M17n Plugin for CakePHP",
    "type":        "cakephp-plugin",
    "keywords":    ["cakephp", "m17n"],
    "homepage":    "http://www.netcommons.org/",
    "license":     "NetCommons License",
    "authors": [
        {
            "name":     "NetCommons Community",
            "homepage": "https://github.com/NetCommons3/M17n/graphs/contributors"
        }
    ],
    "extra": {
        "installer-paths": {
            "app/Plugin/{$name}": ["type:cakephp-plugin"]
        }
    },
    "require": {
        "cakedc/migrations":            "~2.2",
        "cakephp/cakephp":              "~2.7",
        "cakephp/debug_kit":            "~2.2",
        "components/jquery":            "~2.1",
        "chronon/mobile_detect":        "*"
    },
    "require-dev": {
        "mustangostang/spyc":           "dev-master",
        "netcommons/net-commons":       "dev-master",
        "satooshi/php-coveralls":       "dev-master"
    },
    "config": {
        "vendor-dir": "vendors",
        "process-timeout": 3000
    }
}
